[include]
    path = ~/.gitconfig.local
[user]
    name       = Chris Weyl
    email      = cweyl@alumni.drew.edu
    signingkey = 8083A84A
[github]
    user = RsrchBoy
[color]
    ui = auto
    bg = dark
    background = dark
[color "diff"]
    plain = white
[push]
    default = tracking
[branch]
    autosetuprebase = always
    autosetupmerge  = true
[url "git@github.com:"]
    ; use a writable target when remote has a r/o github url
	pushInsteadOf = git://github.com/
	pushInsteadOf = https://github.com/
[url "ssh://cweyl@pkgs.fedoraproject.org/"]
    InsteadOf=fedora:
[svn]
    rmdir = true
[rebase]
    stat = true
[diff]
	algorithm = patience
    ; this seemed like a good idea to avoid FixWhitespace's redness, but
    ; breaks the syntax.  wah-wah.
    ;suppressBlankEmpty = true
[merge]
	defaultToUpstream = true
[notes]
	rewriteRef = refs/notes/rsrchboy
	displayRef = refs/notes/*
[core]
	notesRef = refs/notes/rsrchboy
[http]
	sslVerify = true
[alias]
    co    = checkout
    br    = branch
    st    = status
    df    = diff
    lg    = log -p
    lol   = log --graph --decorate --pretty=oneline --abbrev-commit
    lola  = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls    = ls-files
    wdiff = diff --color-words
    wshow = show --color-words
    fa    = fetch --all

    ;wip   = !sh -c 'git add -A && git commit -m "wip"'
    ;unwip = !sh -c 'git log -n 1 | grep wip >/dev/null && git reset HEAD~'

    cp  = cherry-pick
    cpa = cherry-pick --abort
    cpc = cherry-pick --continue

    ca  = commit --amend --no-edit
    cae = commit --amend --edit

    ri  = rebase --interactive --autosquash
    ris = !sh -c "git stash && git ri $@ && git stash pop"
    rbi = rebase --interactive
    rba = rebase --abort
    rbc = rebase --continue
    rbs = rebase --skip

    ; get a commit message off a commit
    cm  = !sh -c "git show --raw | grep -v -e '^\\S' -e '^$' | sed -e 's/^    //'"

    ; see http://is.gd/gSeOj
    ;fixup  = !sh -c 'git commit -m \"fixup! $(git log -1 --format='\\''%s'\\'' $@)\"' -
    fixup  = !sh -c 'git commit -m  \"fixup! $(git log -1 --format='\\''%s'\\'' $@ | sed -e '\\''s/^fixup! //'\\'')\"' -
    squash = !sh -c 'git commit -m \"squash! $(git log -1 --format='\\''%s'\\'' $@ | sed -e '\\''s/^squash! //'\\'')\"' -

    ; recreate ourself as a single root commit
    nm = !sh -c 'git br -M attic/old_master/`date +%Y-%m-%d/%Hh%Mm%Ss` && git co --orphan master && git add -A && git commit -m \"initial commit\"'

    ; see http://gitready.com/advanced/2011/10/21/ribbon-and-catchup-reading-new-commits.html
    ribbon  = tag --force _ribbon origin/master
    catchup = log --patch --reverse --topo-order _ribbon..origin/master

[giggle]
    main-window-maximized = true
    main-window-geometry = 0x0+0+0
    main-window-view = HistoryView
    history-view-vpane-position = 377
    file-view-vpane-position = 806
[status-tackle]
    destination = master
    integration = master
